{
  "manifest_version": 3,
  "name": "Lateral Phishing Detector",
  "version": "1.0",
  "description": "Detects lateral phishing in emails and displays alerts.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "file:///*",
    "http://localhost:5000/*"
  ],
  "content_scripts": [
    {
      "matches": ["file:///*", "https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],

   "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
      "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Lateral Phishing Detector"
  }

  
  
}
